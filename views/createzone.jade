extends layout

block content
  h1= 'Create Zone'
  form(action="/api/zone",method="post")
    div.input
      span.label Name:
      input(type="text",name="name",placeholder="Name")
    div.input
      span.label Zip code:
      input(type="text",name="zipCodes",placeholder='zone')
    div.actions
      input(type="submit", value="Create Zone")
